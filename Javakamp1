public class EnginDemirog_JavaKamp1 {
    public static void main(String[] args) {
        System.out.println("Hello World");
        //değişken isimlendirme camelCase yazılır
        String ortaMetin = "İlginizi çekebilir";
        String altMetin = "Vade süresi";
        System.out.println(ortaMetin);
        System.out.println(altMetin);
        //integer
        int vade = 12;
        double dolarDun = 18.14;
        double dolarBugun = 18.10;

        boolean dolarDustuMu = false;

        String okYonu = "";
        if (dolarBugun<dolarDun) {  //true
            okYonu= "down.svg";
            System.out.println(okYonu);
        } else if (dolarBugun>dolarDun) {
            okYonu= "up.svg";
            System.out.println(okYonu);
        }
        else {
            okYonu= "equal.svg";
            System.out.println(okYonu);
        }
        // String kredi1= "Hızlı kredi";
        // String kredi2= "kredi X";
        // String kredi3= "kredi Y";

        //Array:liste demektir
        String[] krediler = {"Hızlı Kredi", "Maaşını Halkbank'tan Alanlar", "Mutlu Emekli"};
        // System.out.println(krediler[0]);
        for (int i = 0; i < krediler.length; i++) {
            System.out.println((i + 1) + ".Kredi: " + krediler[i]);
        }
    }
}
